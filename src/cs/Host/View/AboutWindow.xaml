<Window x:Class="JJA.Anperi.Host.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JJA.Anperi.Host.View"
        mc:Ignorable="d"
        Title="About Anperi" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
	<Grid>
		<StackPanel HorizontalAlignment="Center" Orientation="Vertical" Width="Auto" Margin="5">
			<Image VerticalAlignment="Center" Margin="5" Source="../Resources/anperi.ico" Height="50"></Image>
			<TextBlock FontSize="20" Margin="5" HorizontalAlignment="Center">
				<Run>You can find the App</Run>
				<Hyperlink Click="Link_Click" NavigateUri="http://lmgtfy.com/?q=anperi+app">here</Hyperlink>
			</TextBlock>
			<DockPanel LastChildFill="False">
				<TextBlock FontSize="12" Margin="5" TextWrapping="Wrap" Text="created by Jannes Peters, Jesse Nis Arff and Adrian Kurth"></TextBlock>
				<Button DockPanel.Dock="Right" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Click="ButtonOk_Click" TabIndex="3"/>
			</DockPanel>
		</StackPanel>
	</Grid>
</Window>
